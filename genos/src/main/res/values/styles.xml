<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Genos theme. -->
    <style name="Theme.Genos" parent="BaseTheme.NoActionBar" />

    <style name="Theme.Genos.Drawer" parent="BaseTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Genos.TabLayout" parent="Theme.Genos">
        <!-- SO https://stackoverflow.com/a/32880716 直接在 TabLayout 设置 android:singleLine="true" 无效 -->
        <item name="android:singleLine">true</item>
    </style>

</resources>
